<div id="main">
    <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-sm-10">
                        {{#if main_news.specproject}}
                            <a href="spec-project?name={{main_news.id}}">
                        {{else}}
                            <a href="article?id={{main_news.id}}">
                        {{/if}}
                            <section id = "first-news">
                                <div class="photo">
                                    {{#if main_news.image}}
                                        <img src="{{main_news.image}}" alt="" class="img-responsive">
                                    {{else}}
                                        <img src="/images/articles/{{main_news.id}}.jpg" alt="" class="img-responsive">
                                    {{/if}}
                                    {{#if main_news.subtopic}}
                                        <span class="href-on-photo">{{main_news.subtopic}}</span>
                                    {{else}}
                                        <span class="href-on-photo">news</span>
                                    {{/if}}
                                </div>
                                <h2 class="mark">{{{main_news.title}}}</h2>
                                <p>{{main_news.description}}</p>
                                <p class="article-author">{{main_news.author}}</p>
                            </section>
                            </a>

            </div>
            <div class="col-lg-4 col-sm-10">
                {{#if second_news.specproject}}
                    <a href="spec-project?name={{second_news.id}}">
                {{else}}
                    <a href="article?id={{second_news.id}}">
                {{/if}}
                <section id="second-news">
                    <div class="second-news">
                        <div class="photo">
                            {{#if second_news.image}}
                                <img src="{{second_news.image}}" alt="" class="img-responsive">
                            {{else}}
                                <img src="/images/articles/{{second_news.id}}.jpg" alt="" class="img-responsive">
                            {{/if}}
                            {{#if second_news.subtopic}}
                                <span class="href-on-photo">{{second_news.subtopic}}</span>
                            {{else}}
                                <span class="href-on-photo">news</span>
                            {{/if}}
                        </div>
                        <h2 class="mark">{{{second_news.title}}}</h2>
                        <p>{{second_news.description}}</p>
                        <p class="article-author">{{second_news.author}}</p>
                    </div>
                </section>
            </div>
                    <div class="col-lg-1 col-sm-0"></div>
        </div>
        <hr>
    </div>

    <section id="news-section">
        <div class="container">
            <div class="row">
                {{# each other_news}}
                <div class="col-lg-3 col-sm-10 news">
                    {{#if this.specproject}}
                        <a href="spec-project?name={{this.id}}" target="_blank">
                    {{else}}
                        <a href="article?id={{this.id}}" target="_blank">
                    {{/if}}

                    <div class="photo">
                        {{#if this.image}}
                            <img src="{{this.image}}" alt="" class="img-responsive">
                        {{else}}
                            <img src="/images/articles/{{this.id}}.jpg" alt="" class="img-responsive">
                        {{/if}}
                        {{#if this.subtopic}}
                            <span class="href-on-photo">{{this.subtopic}}</span>
                        {{else}}
                            <span class="href-on-photo">news</span>
                        {{/if}}
                    </div>

                    <h3>{{{this.title}}}</h3>
                    <hr>
                        <img src="/images/label/external-link-alt-solid.svg" id="external-link"
                             class="external-link-alt-solid text-right"/>
                        <p class="article-description">{{this.description}}</p>

                        <p class="article-author font-italic" >{{this.author}}</p>
                    </a>
                </div>

                    <div class="col-1"></div>
                {{/each}}
            </div>

         </div>
        <hr>
    </section>

    <section id="expert-section">
        <div class="expert-section-title">
            <hr>
            <p>Думка експерта</p>
        </div>

        <div class="container">
            <div class="row">
                {{# each experts}}
                <div class="col-lg-3 col-sm-10 expert">
                    <img src="/images/experts/{{this.expert}}.jpg" alt="">
                    <blockquote class="font-italic">{{this.author}}</blockquote>
                    <hr>
                    <a href="article?id={{this.id}}">
                        <p>{{this.title}}</p>
                    </a>
                </div>
                <div class="col-lg-1 col-sm-0"></div>
                {{/each}}
            </div>
        </div>
    </section>
</div>

