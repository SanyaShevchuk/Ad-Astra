<link rel="stylesheet" href="/stylesheets/admin/admin.css">
<div id="main">
    <div id="form">
        <div class="imgcontainer">
            <img src="images/label/logo.jpg" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label for="uname"><b>Admin</b></label>
            <input type="text" placeholder="Enter Admin name" name="uname" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>

            <button id="submit_btn" type="submit">Login</button>
        </div>
    </div>

    <div id="admin-menu">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <section class="insert">
                        <h3>Insert Data</h3>
                        <form action="/insert" method="post">
                            <label for="insert-elem">Choose type of item you want to insert:</label>
                            <select id="insert-elem" class="form-control">
                                <option value="" selected disabled hidden>Choose here</option>
                                <option value="usual-article">article</option>
                                <option value="expert-article">expert article</option>
                                <option value="experts">expert information</option>
                            </select>
                            <div class="input" id="insert-id">
                                <label for="id">id</label>
                                <input type="text" id="id" name="id" placeholder="id of article or expert" required>
                            </div>
                            <div class="input" id="insert-name">
                                <label for="name">name</label>
                                <input type="text" id="name" name="name" placeholder="name of adastra-expert">
                            </div>
                            <div class="input" id="insert-title">
                                <label for="title">title</label>
                                <input type="text" id="title" name="title" placeholder="title of article">
                            </div>
                            <div class="input" id="insert-image">
                                <label for="image">image</label>
                                <input type="text" id="image" name="image" placeholder="url of image">
                            </div>
                            <div class="input" id="insert-description">
                                <label for="description">description</label>
                                <input type="text" id="description" name="description" placeholder="description of article" required>
                            </div>
                            <div class="input" id="insert-author">
                                <label for="author">author</label>
                                <input type="text" id="author" name="author" placeholder="author of article">
                            </div>
                            <div class="input" id="insert-text">
                                <label for="text">text</label>
                                <input type="text" id="text" name="text" placeholder="whole text of article">
                            </div>
                            <div class="input" id="insert-date">
                                <label for="date">date</label>
                                <input type="text" id="date" name="date" placeholder="May 12, 2019">
                            </div>
                            <div class="input" id="insert-topic">
                                <label for="topic">topic</label>
                                <input type="text" id="topic" name="topic" placeholder="article belong to which topic">
                            </div>
                            <div class="input" id="insert-subtopic">
                                <label for="subtopic">subtopic</label>
                                <input type="text" id="subtopic" name="subtopic" placeholder="text what will display on picture">
                            </div>
                            <div class="input" id="insert-region">
                                <label for="region">region</label>
                                <input type="text" id="region" name="region" placeholder="article belong to which region">
                            </div>
                            <div class="input" id="insert-photoresource">
                                <label for="photoresource">photoresource</label>
                                <input type="text" id="photoresource" name="photoresource" placeholder="photoresource of article">
                            </div>
                            <div class="input" id="insert-expert">
                                <label for="expert">expert</label>
                                <input type="text" id="expert" name="expert" placeholder="id of real expert who wrote article">
                            </div>
                            <button type="submit">INSERT</button>
                        </form>
                    </section>
                </div>
                <div class="col-sm-6">
                    <section class="get">
                        <h3>Get Data</h3>
                        <form action="/get" method="post">
                            <label for="get-elem">Choose type of article you want to see:</label>
                            <select name="get-elem" id="get-elem" class="form-control">
                                <option value="" selected disabled hidden>Choose here</option>
                                <option value="article">article</option>
                            </select>
                            <div class="input">
                                <label for="id">ID:</label>
                                <input type="text" id="id" name="id">
                            </div>
                            <button type="submit">GO TO ARTICLE</button>
                        </form>
                    </section>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <section class="update">
                        <h3>Update Data</h3>
                        <form action="/update" method="post">
                            <label for="update-elem">Choose:</label>
                            <select name="update-elem" id="update-elem" class="form-control">
                                <option value="" selected disabled hidden>Choose here</option>
                                <option value="usual-article">article</option>
                                <option value="expert-article">expert article</option>
                                <option value="experts">expert</option>
                            </select>
                            <div class="input">
                                <label for="updateId">ID</label>
                                <input type="text" id="updateId" name="updateId">
                            </div>
                            <label>Select field you want to update:</label>
                            <div class="form-check" id="update-id">
                                <input type="checkbox" class="form-check-input" id="id">
                                <label class="form-check-label" for="id">id</label>
                            </div>
                            <div class="form-check" id="update-name">
                                <input type="checkbox" class="form-check-input" id="name">
                                <label class="form-check-label" for="name">name</label>
                            </div>
                            <div class="form-check" id="update-title">
                                <input type="checkbox" class="form-check-input" id="title" >
                                <label class="form-check-label" for="title">title</label>
                            </div>
                            <div class="form-check" id="update-image">
                                <input type="checkbox" class="form-check-input" id="image" >
                                <label class="form-check-label" for="image">image url</label>
                            </div>
                            <div class="form-check" id="update-description">
                                <input type="checkbox" class="form-check-input" id="description">
                                <label class="form-check-label" for="description">description</label>
                            </div>
                            <div class="form-check" id="update-text">
                                <input type="checkbox" class="form-check-input" id="text" >
                                <label class="form-check-label" for="text">text</label>
                            </div>
                            <div class="form-check" id="update-author">
                                <input type="checkbox" class="form-check-input" id="author" >
                                <label class="form-check-label" for="author">author</label>
                            </div>
                            <div class="form-check" id="update-date">
                                <input type="checkbox" class="form-check-input" id="date" >
                                <label class="form-check-label" for="date">date</label>
                            </div>
                            <div class="form-check" id="update-topic">
                                <input type="checkbox" class="form-check-input" id="topic" >
                                <label class="form-check-label" for="topic">topic</label>
                            </div>
                            <div class="form-check" id="update-region">
                                <input type="checkbox" class="form-check-input" id="region" >
                                <label class="form-check-label" for="region">region</label>
                            </div>
                            <div class="form-check" id="update-expert">
                                <input type="checkbox" class="form-check-input" id="expert" >
                                <label class="form-check-label" for="expert">expert</label>
                            </div>
                            <div class="form-check" id="update-subtopic">
                                <input type="checkbox" class="form-check-input" id="subtopic" >
                                <label class="form-check-label" for="subtopic">subtopic</label>
                            </div>
                            <div class="form-check" id="update-photoresource">
                                <input type="checkbox" class="form-check-input" id="photoresource" >
                                <label class="form-check-label" for="photoresource">photoresource</label>
                            </div>
                            <button type="submit">UPDATE</button>
                        </form>
                    </section>
                </div>
                <div class="col-sm-6">
                    <section class="delete">
                        <h3>Delete Data</h3>
                        <form action="/delete" method="post">
                            <label for="delete-elem">Choose type of item you want to delete:</label>
                            <select name="delete-elem" id="delete-elem" class="form-control">
                                <option value="" selected disabled hidden>Choose here</option>
                                <option value="article">article</option>
                                <option value="experts">expert</option>
                            </select>
                            <div class="input">
                                <label for="id">ID</label>
                                <input type="text" id="id" name="id">
                            </div>
                            <button type="submit">DELETE</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="admin.js"></script>
