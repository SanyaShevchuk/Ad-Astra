<link rel="stylesheet" href="/stylesheets/admin/admin.css">
<div id="main">
    <div id="form">
        <div class="imgcontainer">
            <img src="images/label/logo.jpg" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label for="uname"><b>Admin</b></label>
            <input type="text" placeholder="Enter Username" name="uname" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>

            <button id="submit_btn" type="submit">Login</button>
        </div>
    </div>

    <div id="admin-menu">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <section class="insert">
                        <h3>Insert Data</h3>
                        <form action="/insert" method="post">
                            <label for="insert-type-of-elem">Insert:</label>
                            <select id="insert-type-of-elem" class="form-control">
                                <option value="" selected disabled hidden>Choose here</option>
                                <option value="usual-article">usual article</option>
                                <option value="spec-project-article">spec-project article</option>
                                <option value="spec-project-topic">spec-project topic</option>
                                <option value="expert-information">expert information</option>
                            </select>
                            <div class="input" id="input-id">
                                <label for="id">id</label>
                                <input type="text" id="id" name="id">
                            </div>
                            <div class="input" id="input-name">
                                <label for="name">name</label>
                                <input type="text" id="name" name="name">
                            </div>
                            <div class="input" id="input-title">
                                <label for="title">title</label>
                                <input type="text" id="title" name="title">
                            </div>
                            <div class="input" id="input-description">
                                <label for="description">description</label>
                                <input type="text" id="description" name="description">
                            </div>
                            <div class="input" id="input-author">
                                <label for="author">author</label>
                                <input type="text" id="author" name="author">
                            </div>
                            <div class="input" id="input-text">
                                <label for="text">text</label>
                                <input type="text" id="text" name="text">
                            </div>
                            <div class="input" id="input-date">
                                <label for="date">date</label>
                                <input type="text" id="date" name="date" placeholder="May 12, 2019">
                            </div>
                            <div class="input" id="input-topic">
                                <label for="topic">topic</label>
                                <input type="text" id="topic" name="topic">
                            </div>
                            <div class="input" id="input-subtopic">
                                <label for="subtopic">subtopic</label>
                                <input type="text" id="subtopic" name="subtopic">
                            </div>
                            <div class="input" id="input-region">
                                <label for="region">region</label>
                                <input type="text" id="region" name="region">
                            </div>
                            <div class="input" id="input-photoresource">
                                <label for="photoresource">photoresource</label>
                                <input type="text" id="photoresource" name="photoresource">
                            </div>
                            <div class="input" id="input-specproject">
                                <label for="specproject">specproject</label>
                                <input type="text" id="specproject" name="specproject">
                            </div>
                            <div class="input" id="input-id-author">
                                <label for="id_author">id_author</label>
                                <input type="text" id="id_author" name="id_author">
                            </div>
                            <button type="submit">INSERT</button>
                        </form>
                    </section>
                </div>
                <div class="col-sm-6">
                    <section class="get">
                        <h3>Get Data</h3>
                        <div>
                            <label for="get-elem">Choose:</label>
                            <select name="get-elem" id="get-elem" class="form-control">
                                <option value="" selected disabled hidden>Choose here</option>
                                <option value="usual-article">article</option>
                                <option value="spec-project-article">spec-project article</option>
                            </select>
                            <label for="getId">ID:</label>
                            <input type="text" id="getId" name="getId">
                            <a id="getDataA" href="/">Go to article</a>
                        </div>
                    </section>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <section class="update">
                        <h3>Update Data</h3>
                        <form action="/update" method="post">
                            <div class="input">
                                <label for="id">ID</label>
                                <input type="text" id="id" name="id">
                            </div>
                            <div class="input">
                                <label for="title">Title</label>
                                <input type="text" id="title" name="title">
                            </div>
                            <div class="input">
                                <label for="content">Content</label>
                                <input type="text" id="content" name="content">
                            </div>
                            <div class="input">
                                <label for="author">Author</label>
                                <input type="text" id="author" name="author">
                            </div>
                            <button type="submit">UPDATE</button>
                        </form>
                    </section>
                </div>
                <div class="col-sm-6">
                    <section class="delete">
                        <h3>Delete Data</h3>
                        <form action="/delete" method="post">
                            <div class="input">
                                <label for="id">ID</label>
                                <input type="text" id="id" name="id">
                            </div>
                            <button type="submit">DELETE</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="admin.js"></script>
